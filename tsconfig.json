{
  "compilerOptions": {
    "target": "esnext",
    "module": "umd", 
    "moduleResolution": "node",
    "baseUrl": "./",
    "types": [
      "node",
      "jest"
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}